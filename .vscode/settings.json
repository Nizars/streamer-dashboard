{
    "cSpell.words": [
        "gistology"
    ],
    "cSpell.language": "en",
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "javascriptreact",
        "json",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pub",
        "python",
        "restructuredtext",
        "rust",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],
    "activitusbar.views": {
        "explorer": "file-text",
        "search": "search",
        "scm": "repo-forked",
        "debug": "bug",
        "extensions": "package"
    },
    "commands.commands": [

        {
            "text": "$(gear)",
            "command": "workbench.action.openGlobalSettings",
            "tooltip": "Settings",
            "alignment": "left",
            "priority": 89999
        },
        {
            "text": "$(chevron-right)",
            "command": "workbench.action.showCommands",
            "tooltip": "Show commands",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(screen-full)",
            "command": "workbench.action.toggleZenMode",
            "tooltip": "Toggle Zen mode",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(file-code)",
            "command": "workbench.action.files.newUntitledFile",
            "tooltip": "New file",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(checklist)",
            "command": "workbench.action.files.saveAll",
            "tooltip": "Save all files",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(terminal)",
            "command": "terminals.runTerminal",
            "tooltip": "Run a terminal",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(terminal) 1",
            "command": "workbench.action.terminal.focusAtIndex1",
            "tooltip": "Focus to terminal #1",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(terminal) 2",
            "command": "workbench.action.terminal.focusAtIndex2",
            "tooltip": "Focus to terminal #2",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(terminal) 3",
            "command": "workbench.action.terminal.focusAtIndex3",
            "tooltip": "Focus to terminal #3",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(file-submodule)",
            "command": "projects.open",
            "tooltip": "Open a project",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(file-directory)",
            "command": "projects.openByName",
            "arguments": ["vscode-projects-plus"],
            "tooltip": "Open Projects+",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(list-ordered)",
            "command": "projects.openByName",
            "arguments": ["vscode-todo-plus", true],
            "tooltip": "Open Todo+ in a new window",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(briefcase)",
            "command": "projects.openByName",
            "arguments": ["My Group", false, true],
            "tooltip": "Switch to the My Group",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(check)",
            "command": "todo.open",
            "tooltip": "Open todo",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "$(checklist)",
            "command": "projects.todo",
            "tooltip": "Open global todo",
            "filterLanguageRegex": "todo",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "Init",
            "command": "terminals.runTerminalByName",
            "arguments": ["init"],
            "tooltip": "Init the project",
            "alignment": "left",
            "priority": 89999
          },
          {
            "text": "Serve",
            "command": "terminals.runTerminalByName",
            "arguments": ["serve"],
            "tooltip": "Serve the project",
            "alignment": "left",
            "priority": 89999
          }
    ],
    "terminals.terminals": [
        {
          "name": "Cmder",
          "description": "A Cmder terminal",
          "icon": "code",
          "cwd": "D:\\Projects",
          "shellPath": "C:\\Windows\\System32\\cmd.exe",
          "shellArgs": ["/k %CMDER_ROOT%\\vendor\\init.bat"],
          "env": { "name": "Cmder" }
        },
        {
          "name": "CMD",
          "description": "A CMD terminal",
          "icon": "code",
          "cwd": "D:\\Projects",
          "shellPath": "C:\\Windows\\System32\\cmd.exe",
          "env": { "name": "CMD" }
        },
        {
          "name": "PowerShell",
          "description": "A CMD terminal",
          "icon": "code",
          "cwd": "D:\\Projects",
          "shell": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
          "env": { "name": "Powershell" }
        },
        {
          "name": "Git bash",
          "description": "A Git Bash terminal",
          "icon": "code",
          "cwd": "D:\\Projects",
          "shell": "C:\\Program Files\\Git\\bin\\bash.exe",
          "env": { "name": "Git Bash" }
        },
        {
          "name": "WSL Bash",
          "description": "A WSL Bash terminal",
          "icon": "code",
          "cwd": "D:\\Projects",
          "shell": "C:\\Windows\\System32\\bash.exe",
          "env": { "name": "WSL Bash" }
        }
      ]
}
