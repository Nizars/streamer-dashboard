{
  "name": "streamer-dashboard-server",
  "version": "1.0.0",
  "author": "Nizars",
  "license": "ISC",
  "description": "Back end server for Streamer Dashboard",
  "keywords": [
    "Twitch",
    "Server",
    "Bearer",
    "Auth",
    "API"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Nizars/streamer-dashboard"
  },
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "serve": "nodemon ./dist/app.js",
    "start_local": "npm run build && npm run watch",
    "watch-ts": "tsc -w",
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run tslint",
    "serve-debug": "nodemon --inspect ./dist/app.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --forceExit",
    "docs": "tsoa swagger"
  },
  "dependencies": {
    "@types/express": "~4.16.0",
    "@types/socket.io": "~1.4.34",
    "ajv": "^6.5.0",
    "await-to-js": "^2.0.1",
    "body-parser": "^1.18.3",
    "core-js": "2.5.7",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "hammerjs": "^2.0.8",
    "handlebars": "^4.0.11",
    "hoek": "^5.0.3",
    "http-status": "^1.1.2",
    "jsonwebtoken": "^8.2.2",
    "moment": "^2.22.2",
    "mongoose": "^5.1.4",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-oauth": "^1.0.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "socket.io": "~2.1.1",
    "ts-node": "^6.1.0",
    "uuid": "^3.2.1",
    "app-root-path": "^2.0.1",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.0.0",
    "@types/mongodb": "^3.0.19",
    "@types/mongoose": "^5.0.15",
    "@types/morgan": "^1.7.35",
    "@types/socket.io": "^1.4.34",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "concurrently": "^3.5.1",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "tsoa": "^2.1.5",
    "gulp": "^3.9.1",
    "gulp-typescript": "^4.0.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
